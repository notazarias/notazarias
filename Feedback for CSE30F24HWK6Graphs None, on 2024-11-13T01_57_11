  {
   "cell_type": "code",
   "execution_count": 44,
   "id": "5b2e570b",
   "metadata": {
    "id": "6ltvCV_8Ugnr",
    "notebookgrader": {
     "id": "1b0592839a258cae106aad3eab6015fef3711408",
     "is_solution": false,
     "is_tests": false,
     "readonly": true
