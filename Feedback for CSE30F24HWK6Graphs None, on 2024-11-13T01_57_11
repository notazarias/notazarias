    "    g2 = Graph(vertices=vs)\n",
    "    g3 = Graph(vertices=vs)\n",
    "    esp = es[:] # Creates a copy.\n",
    "    random.shuffle(esp)\n",
    "    for e in es:\n",
    "        g2.add_edge(e)\n",
    "    for e in esp:\n",
    "        g3.add_edge(e)\n",
