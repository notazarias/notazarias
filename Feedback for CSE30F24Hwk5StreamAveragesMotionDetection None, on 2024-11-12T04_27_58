    "def noisy_temp(noise=1., d=0.05):\n",
    "    t = -d # time\n",
    "    while True:\n",
    "        t += d # We increment time.\n",
    "        yield 15. + 10. * np.sin(t) + noise * 2.  * (random.random() - 0.5)\n",
