   "id": "4e4b6d0e",
   "metadata": {
    "executionInfo": {
     "elapsed": 166,
     "status": "ok",
     "timestamp": 1731385642486,
     "user": {
      "displayName": "Azarias Ashenafi",
      "userId": "07661282689053385655"
     },
     "user_tz": 480
    },
    "id": "n9u3QRLL5pj4",
    "notebookgrader": {
     "id": "896f798a0a7f97673c6f3a1539315f77505214fb",
     "is_solution": true,
     "is_tests": false,
     "readonly": false
