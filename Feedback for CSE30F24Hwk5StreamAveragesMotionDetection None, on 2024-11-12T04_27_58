   "source": [
    "def noisy_sin(noise=1.):\n",
    "    d = 0.05 # Time increment.\n",
    "    t = -d # time\n",
    "    while True:\n",
    "        t += d # We increment time.\n",
    "        yield np.sin(t) + noise * (random.random() - 0.5)\n",
    "\n",
    "\n",
    "# Let's display it.\n",
    "xs = []\n",
    "for x in noisy_sin():\n",
    "    xs.append(x)\n",
    "    if len(xs) == 200:\n",
    "        break\n",
    "plt.plot(xs)\n",
    "plt.show()"
   ]
  },
