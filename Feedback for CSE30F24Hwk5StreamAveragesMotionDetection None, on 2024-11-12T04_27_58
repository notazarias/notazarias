   "source": [
    "#@title Exercise: implement a `SlidingWindowAveragerator`\n",
    "\n",
    "class SlidingWindowAveragerator(object):\n",
    "\n",
    "    ### YOUR SOLUTION HERE\n",
    "    def __init__ (self, window_size):\n",
    "        self.window_size = window_size\n",
    "        self.seq = []\n",
    "        self.sum_x = 0.\n",
    "        self.sum_x_sq = 0.\n",
    "        self.n = 0\n",
    "\n",
    "\n",
    "    @property\n",
    "    def avg(self):\n",
    "        return self.sum_x / self.n\n",
    "\n",
    "    @property\n",
    "    def std(self):\n",
    "        mu = self.avg\n",
    "        return np.sqrt(self.sum_x_sq / self.n - mu * mu) if self.n else 0\n",
    "        # if self.n == 0:\n",
    "        #     return 0\n",
    "\n",
    "\n",
    "    def add(self, x):\n",
    "        self.seq.append(x)\n",
    "        self.sum_x += x\n",
    "        self.sum_x_sq += x * x\n",
    "        self.n += 1\n",
    "\n",
    "        if len(self.seq) > self.window_size:\n",
    "            remov_ele = self.seq.pop(0)\n",
    "            # self.sum_x -= self.seq[0]  # first value\n",
    "            self.sum_x -= remov_ele\n",
    "            # self.sum_x_sq -= self.seq[0] * self.seq[0]\n",
    "            self.sum_x_sq -= remov_ele * remov_ele\n",
    "            self.n -= 1\n",
    "\n",
    "\n"
   ]
  },
